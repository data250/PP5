    </p>
{% else %}
	<table border="1">
    {% for movie in movies %}
        <tr>
			<td>
			    <a style="color:inherit" href="blank">{{ movie.name }}</a>
			</td>
			<td>
				<a href="{{ movie.cover }}"><img class="img-shadow" src="{{ movie.cover }}" style="width: 50%"  onerror="this.style.display='none'"/></a>
			</td>
			<td>
				{{ movie.description }}
			</td>
			<td>
				{{ movie.actorsList }}
			</td>
			<td>
				{{ movie.genre }}
			</td>
			<td>
				{{ movie.ordersCount }}
			</td>
		</tr>
    {% endfor %}
	</table>
{% endif %}